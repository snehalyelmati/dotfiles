bindsym $mod+F2 exec google-chrome-stable --incognito
bindsym $mod+F3 exec alacritty -e ranger
bindsym $mod+F4 exec thunar
bindsym $mod+F10 exec brave --incognito
bindsym $mod+F11 exec telegram-desktop
